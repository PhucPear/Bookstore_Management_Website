@model Website_QuanLyNhaSachNguyenVanCu.Areas.Admin.Models.ThongKe
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>In doanh thu bán hàng</title>
    <!--Bootstrap 4-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="https://cdn.rawgit.com/PascaleBeier/bootstrap-validate/v2.2.0/dist/bootstrap-validate.js"></script>
</head>
<body>
    <div style="padding-left:1%">
        <div class="table-responsive">
            <div class="table-wrapper" style="width:1000px; padding:1%">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-12">
                            <h2>Thống kê <b>Bán hàng</b> @Model.theoThoiGian</h2>
                        </div>
                    </div>
                    <div class="row" style="display:flex; justify-content:center; padding:1%;">
                        <h3 style="font-weight:bold;">Nhà Sách Nguyễn Văn Cừ</h3>
                    </div>
                    <div class="row" style="padding:1%;">
                        <h5>Ngày lập:  @Model.ngayLap</h5>
                    </div>
                    <div class="row" style="padding:1%;">
                        <h5>Người lập:  @Model.nguoiLap</h5>
                    </div>
                </div>
                <table class="table table-striped table-hover text-center">
                    <thead>
                        <tr>
                            <th style="width:14%">Tên nhân viên</th>
                            <th style="width:10%">Ngày bán hàng</th>
                            <th style="width:12%">SDT Khách hàng</th>
                            <th style="width:10%">Mã đơn hàng</th>
                            <th style="width:14%">Kiểu thanh toán</th>
                            <th style="width:10%">Doanh số</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in Model.dsDonHang)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(i => item.NHANVIEN.TenNhanVien)</td>
                                    <td>@item.NgayDat.Value.ToString("dd/MM/yyyy")</td>
                                    <td>@Html.DisplayFor(i => item.KHACHHANG.SDT)</td>
                                    <td>@Html.DisplayFor(i => item.MaDonHang)</td>
                                    <td>@Html.DisplayFor(i => item.HinhThucTT)</td>
                                    <td>@string.Format("{0:0.000}", item.TongThanhTien) đ</td>
                                </tr>
                            }
                        }
                    </tbody>
                    <tfoot>
                        <tr style="background-color:#B9D3EE">
                            <td colspan="2" style="text-align:center; font-size:large; font-weight:bold; color:orangered">Số lượng đơn: @Model.dsDonHang.Count</td>
                            <td colspan="4" style="text-align:center; font-size:large; font-weight:bold; color:orangered">@Model.tongDoanhThu đ</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</body>
</html>


