@model Website_QuanLyNhaSachNguyenVanCu.Models.SANPHAM
@{
    ViewBag.Title = "ChiTietSanPham";
    Layout = "~/Views/Shared/SanPham_LayoutPage.cshtml";
}
<div class="col-xs-12 col-sm-8 col-md-8 col-lg-9 pull-right">
    <div id="tg-content" class="tg-content">
        <div class="tg-productdetail">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    <div class="tg-postbook">
                        <figure class="tg-featureimg"><img src="~/assets/user/images/sach/@Model.HinhAnh" alt="image description"></figure>
                        <div class="tg-postbookcontent">
                            <span class="tg-bookprice">
                                @{var dgKM = Model.DonGia - Model.DonGia * Model.KHUYENMAI.TiLe;}
                                <ins>@string.Format("{0:0.000}", dgKM) đ</ins>
                                <del>@Model.DonGia đ</del>
                            </span>
                            <span class="tg-bookwriter">Tiết kiệm @string.Format("{0:0.000}",(Model.DonGia - dgKM)) đ</span>                                                                     
                            <button class="tg-btn tg-active tg-btn-lg" onclick="themSPVaoGioHang(@Model.MaSanPham)">Thêm Vào Giỏ</button>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
                    <div class="tg-productcontent">
                        <ul class="tg-bookscategories">
                            <li><a href="@Url.Action("SanPhamTheoLoai", "SanPham", new { @maLSP = Model.MaLoaiSP })">@Model.LOAISANPHAM.TenLoaiSP</a></li>
                        </ul>
                        <div class="tg-themetagbox"><span class="tg-themetag">sale</span></div>
                        <div class="tg-booktitle">
                            <h3>@Model.TenSanPham</h3>
                        </div>
                        @{
                            if (Model.LOAISANPHAM.MaDanhMuc == 1)
                            {
                                <span class="tg-bookwriter">Tác giả: <a href="javascript:void(0);">@Model.TACGIA.TenTacGia</a></span>
                                <span class="tg-stars"><span></span></span>
                                <div class="tg-description">
                                    <p>@Model.MoTa</p>
                                </div>
                                <div class="tg-sectionhead">
                                    <h2>Thông tin sản phẩm</h2>
                                </div>
                                <ul class="tg-productinfo">
                                    <li><span>Nhà xuất bản:</span><span>@Model.NHAXUATBAN.TenNXB</span></li>
                                    <li><span>Tác giả:</span><span>@Model.TACGIA.TenTacGia</span></li>
                                    <li><span>Năm xuất bản:</span><span>@Model.NamXB</span></li>
                                </ul>
                            }
                            else
                            {
                                <span class="tg-bookwriter">Nhà cung cấp: <a href="javascript:void(0);">@Model.NHACUNGCAP.TenNCC</a></span>
                                <span class="tg-stars"><span></span></span>
                                <div class="tg-description">
                                    <p>@Model.MoTa</p>
                                </div>
                                <div class="tg-sectionhead">
                                    <h2>Thông tin sản phẩm</h2>
                                </div>
                                <ul class="tg-productinfo">
                                    <li><span>Nhà cung cấp:</span><span>@Model.NHACUNGCAP.TenNCC</span></li>
                                    <li><span>Xuất xứ:</span><span>@Model.XuatXu</span></li>
                                </ul>
                            }
                        }
                    </div>
                </div>
                <div class="tg-aboutauthor" style="padding-top:10%">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="tg-sectionhead">
                            <h2>Đánh giá sản phẩm</h2>
                        </div>
                        <div class="tg-authorbox">                         
                            <div class="tg-authorinfo">
                                <div class="tg-authorhead">
                                    <div class="tg-leftarea">
                                        <div class="tg-authorname">
                                            <h2>Kathrine Culbertson</h2>
                                            <span>Author Since: June 27, 2017</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="tg-description">
                                    <p>Laborum sed ut perspiciatis unde omnis iste natus sit voluptatem accusantium doloremque laudantium totam rem aperiam eaque ipsa quae ab illo inventore veritatis etation.</p>
                                </div>
                                <a class="tg-btn tg-active" href="javascript:void(0);">View All Books</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
