                                                            @{var dgKM = item.SANPHAM.DonGia - item.SANPHAM.DonGia * item.SANPHAM.KHUYENMAI.TiLe;}
                                                            <td>@string.Format("{0:0.000}", dgKM) đ</td>
                                                            <td>@string.Format("{0:0.000}", item.ThanhTien) đ</td>
